# VirtualBox MCP Server Environment Configuration
# Copy this to .env and customize for your environment

# VirtualBox Configuration
VBOXMANAGE_PATH=VBoxManage
VIRTUALBOX_HOME=""

# Server Configuration
MCP_SERVER_NAME="VirtualBox MCP Server"
MCP_SERVER_VERSION="1.0.0"
DEBUG=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/vboxmcp.log
LOG_ROTATION_SIZE=10MB
LOG_BACKUP_COUNT=5

# Templates Configuration
TEMPLATES_FILE=config/vm_templates.yaml
DEFAULT_TEMPLATE=ubuntu-dev
AUTO_RELOAD_TEMPLATES=true

# VM Default Settings
DEFAULT_MEMORY_MB=2048
DEFAULT_DISK_GB=20
DEFAULT_NETWORK=NAT
DEFAULT_OS_TYPE=Ubuntu_64

# Networking Configuration
PORT_FORWARDING_START=8000
PORT_FORWARDING_END=9000
ENABLE_SSH_FORWARDING=true
DEFAULT_SSH_PORT=2222

# Snapshots Configuration
MAX_SNAPSHOTS_PER_VM=10
AUTO_CLEANUP_SNAPSHOTS=true
SNAPSHOT_PREFIX=auto

# Performance Settings
MAX_CONCURRENT_OPERATIONS=3
VM_INFO_CACHE_TTL=30
TEMPLATE_CACHE_TTL=300

# Security Settings
REQUIRE_DELETE_CONFIRMATION=true
ALLOW_FORCE_OPERATIONS=true
BLOCK_PRIVILEGED_PORTS=true
MIN_ALLOWED_PORT=1024

# Development Settings
ENABLE_MOCK_MODE=false
AUTO_CLEANUP_TEST_VMS=true
TEST_VM_PREFIX=test_
TEST_VM_MAX_AGE_HOURS=24

# Austrian Efficiency Settings
PREFER_LINKED_CLONES=true
ENABLE_PARALLEL_CREATION=true
PROVIDE_SOLUTION_SUGGESTIONS=true
AUSTRIAN_DIRECTNESS=true

# Integration Settings
ENABLE_RICH_RESPONSES=true
ENABLE_METRICS_EXPORT=true
PROMETHEUS_PORT=9091

# Host Resource Monitoring
CHECK_HOST_RESOURCES=true
MIN_FREE_MEMORY_MB=1024
MIN_FREE_DISK_GB=5

# File Operations
MAX_FILE_SIZE_MB=100
ALLOWED_EXTENSIONS=.iso,.vdi,.vmdk,.vhd

# Advanced Configuration
COMMAND_TIMEOUT=60
VM_START_TIMEOUT=120
VM_STOP_TIMEOUT=60
SNAPSHOT_TIMEOUT=180

# Optional: Custom paths
CUSTOM_TEMPLATES_PATH=""
CUSTOM_LOGS_PATH=""
CUSTOM_CONFIG_PATH=""
