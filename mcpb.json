{
  "name": "virtualization-mcp",
  "version": "1.0.1b1",
  "description": "Professional VirtualBox management server with comprehensive VM operations, networking, storage, and security features",
  "author": "Sandra Schi",
  "license": "MIT",
  "outputDir": "dist",
  "mcp": {
    "version": "2.12.0",
    "server": {
      "command": "python",
      "args": ["-m", "virtualization_mcp"],
      "transport": "stdio"
    },
    "capabilities": {
      "tools": true,
      "resources": false,
      "prompts": true
    }
  },
  "dependencies": {
    "python": ">=3.10.0",
    "fastmcp": ">=2.12.2,<3.0.0"
  },
  "build": {
    "sourceDir": ".",
    "mcpbDir": "mcpb",
    "includePaths": [
      "src/**/*.py",
      "mcpb/**/*",
      "requirements.txt",
      "README.md",
      "LICENSE"
    ],
    "excludePaths": [
      "**/__pycache__/**",
      "**/*.pyc",
      "tests/**",
      "docs/**",
      ".git/**",
      "*.log"
    ]
  },
  "metadata": {
    "repository": "https://github.com/sandraschi/virtualization-mcp",
    "homepage": "https://github.com/sandraschi/virtualization-mcp",
    "documentation": "https://github.com/sandraschi/virtualization-mcp/blob/main/README.md",
    "issues": "https://github.com/sandraschi/virtualization-mcp/issues",
    "keywords": [
      "mcp",
      "virtualbox",
      "vm",
      "virtualization",
      "automation",
      "fastmcp",
      "hypervisor",
      "vbox",
      "virtual-machines"
    ],
    "categories": [
      "Development Tools",
      "System Administration",
      "Virtualization"
    ]
  }
}
